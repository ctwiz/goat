<table class="companies">
  <thead>
    <tr>
      <td>Name</td>
      <td>Symbol</td>
      <td>Market Cap</td>
      <td>Sector</td>
      <td>Industry</td>
    </tr>
  </thead>
  <tbody>
    <%=render "companies/company.html.erb", company: @company%>
  </tbody>
</table>

<div>
  Views: <%=link_to "Google", "https://www.google.com/finance?q=#{@company.stock_symbol}", target: "_blank" %>,
         <%=link_to "Yahoo", "http://finance.yahoo.com/q?s=#{@company.stock_symbol}", target: "_blank" %>
         <%=link_to "Reuters", "http://www.reuters.com/finance/stocks/overview?symbol=#{@company.stock_symbol}", target: "_blank" %>
         <%=link_to "Daily Finance", "https://www.dailyfinance.com/quote/jump?exchange-input=&ticker-input=#{@company.stock_symbol}", target: "_blank" %>
<div>

<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Company</td>
      <td>Last year's EPS</td>
      <td>EPS forecast</td>
      <td>Diff</td>
      <td></td>
      <td>Magnitude</td>
      <td>Reporting Date</td>
      <td>Fiscal Quarter</td>
      <td>Last Updated</td>
    </tr>
  </thead>
  <tbody>
  <% @earnings.each do |earning| %>
    <%=render "companies/earning.html.erb", earning: earning %>
  <% end %>
  </tbody>
</table>
